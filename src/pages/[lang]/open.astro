---
import Layout from '../../layouts/Layout.astro';
import GlassCard from '../../components/GlassCard.astro';
import GlassButton from '../../components/GlassButton.astro';
import { t, type Language } from '../../lib/i18n';

export async function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const language: Language = lang === 'en' ? 'en-US' : 'zh-CN';
---

<Layout title={`${t('open.title', language)} | ${t('home.title', language)}`} language={language}>
  <div class="max-w-4xl mx-auto">
    <!-- 页面标题 -->
    <GlassCard class="p-8 mb-8 text-center fade-in">
      <h1 class="text-4xl font-bold mb-4" style="color: var(--text-primary);">
        📊 {t('open.title', language)}
      </h1>
      <p class="text-lg" style="color: var(--text-secondary);">
        {t('open.description', language)}
      </p>
    </GlassCard>

    <!-- 即将推出 -->
    <GlassCard class="p-8 text-center">
      <div class="text-6xl mb-4">📈</div>
      <h2 class="text-2xl font-semibold mb-4" style="color: var(--text-primary);">
        {language === 'zh-CN' ? '仪表板开发中' : 'Dashboard Under Development'}
      </h2>
      <p class="mb-6" style="color: var(--text-secondary); line-height: 1.6;">
        {language === 'zh-CN' 
          ? '我正在构建一个项目仪表板来展示我的工作进展和贡献统计。' 
          : 'I\'m building a project dashboard to showcase my work progress and contribution statistics.'
        }
      </p>
      <div class="flex justify-center gap-4">
        <GlassButton variant="primary" size="lg" href={`/${lang}/projects`}>
          {t('home.viewProjects', language)}
        </GlassButton>
        <GlassButton variant="secondary" size="lg" href={`/${lang}/about`}>
          {t('common.aboutMe', language)}
        </GlassButton>
      </div>
    </GlassCard>
  </div>
</Layout>
