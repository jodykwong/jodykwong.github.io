---
export interface Props {
  variant?: 'default' | 'elevated' | 'subtle';
  class?: string;
  hover?: boolean;
  style?: string;
}

const {
  variant = 'default',
  class: className = '',
  hover = true,
  style = ''
} = Astro.props;

const cardClasses = [
  'card',
  variant === 'elevated' && 'card-elevated',
  variant === 'subtle' && 'glass-subtle',
  hover && 'hover:transform hover:scale-[1.02]',
  className
].filter(Boolean).join(' ');
---

<div class={cardClasses} style={style}>
  <slot />
</div>

<style>
  .card {
    transition: all 300ms cubic-bezier(0.25, 0.1, 0.25, 1);
  }
</style>
