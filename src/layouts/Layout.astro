---
import ThemeToggle from '../components/ThemeToggle.astro';
import { getPersonalInfo, getSocialLinks } from '../lib/supabase';

export const prerender = false; // 确保服务器端渲染

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Full-Stack Developer, Maker of Products, and Solopreneur" } = Astro.props;

// 获取个人信息用于导航栏和页脚
const personalInfo = await getPersonalInfo();
const displayName = personalInfo?.name || "Your Name";

// 获取社交媒体链接
const socialLinks = await getSocialLinks();

// 调试信息

---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- 预加载关键资源 -->
    <link rel="preload" href="/src/styles/glassmorphism.css" as="style" />

    <!-- 图标和样式 -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/glassmorphism.css" />

    <!-- SEO和性能优化 -->
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0ea5e9" />

    <title>{title}</title>

    <!-- 防闪烁主题初始化 -->
    <script is:inline>
      // 立即应用保存的主题，防止闪烁
      (function() {
        const savedTheme = localStorage.getItem('theme');
        const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        const theme = savedTheme || systemTheme;
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>

    <!-- 浏览器兼容性检测 -->
    <script is:inline>
      // 检测关键特性支持
      (function() {
        var hasBackdropFilter = CSS.supports('backdrop-filter', 'blur(1px)') || CSS.supports('-webkit-backdrop-filter', 'blur(1px)');
        if (!hasBackdropFilter) {
          document.documentElement.classList.add('no-backdrop-filter');
        }
      })();
    </script>
  </head>
  <body>
    <header class="navbar">
      <nav class="max-w-4xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-primary hover:text-blue-700 transition-colors">
            {displayName}
          </a>

          <div class="hidden md:flex items-center space-x-6">
            <a href="/" class="hover:text-primary transition-colors">Home</a>
            <a href="/projects" class="hover:text-primary transition-colors">Projects</a>
            <a href="/writing" class="hover:text-primary transition-colors">Writing</a>
            <a href="/software" class="hover:text-primary transition-colors">On Software</a>
            <a href="/open" class="hover:text-primary transition-colors">Open Project Dashboard</a>
            <a href="/about" class="hover:text-primary transition-colors">About</a>
            <ThemeToggle />
          </div>

          <div class="flex items-center space-x-4 md:hidden">
            <ThemeToggle />
            <button class="theme-toggle" id="mobile-menu-button">
              <span class="sr-only">Open menu</span>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <div class="md:hidden mt-4 hidden glass" id="mobile-menu" style="border-radius: var(--radius-xl); padding: 16px; margin-top: 16px;">
          <div class="flex flex-col space-y-3">
            <a href="/" class="hover:text-primary transition-colors py-2">Home</a>
            <a href="/projects" class="hover:text-primary transition-colors py-2">Projects</a>
            <a href="/writing" class="hover:text-primary transition-colors py-2">Writing</a>
            <a href="/software" class="hover:text-primary transition-colors py-2">On Software</a>
            <a href="/open" class="hover:text-primary transition-colors py-2">Open Project Dashboard</a>
            <a href="/about" class="hover:text-primary transition-colors py-2">About</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="max-w-4xl mx-auto px-6 py-8" style="margin-top: 80px;">
      <slot />
    </main>

    <footer class="glass mt-16" style="border-radius: var(--radius-2xl) var(--radius-2xl) 0 0; margin: 64px 24px 0 24px;">
      <div class="max-w-4xl mx-auto px-6 py-8 text-center" style="color: var(--text-secondary);">
        <div class="flex justify-center space-x-6 mb-6">
          {socialLinks.map((link) => {
            // 确保 email 链接有正确的 mailto: 前缀
            let href = link.url || '#';
            if (link.platform === 'email' && href && !href.startsWith('mailto:')) {
              href = `mailto:${href}`;
            }

            return (
            <a
              href={href}
              class="hover:text-primary transition-all duration-200 hover:scale-110 cursor-pointer"
              target={link.platform === 'email' ? '_self' : '_blank'}
              title={link.display_name}
            >
              <span class="sr-only">{link.display_name}</span>
              {link.platform === 'email' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
              )}
              {link.platform === 'x' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
                </svg>
              )}
              {link.platform === 'github' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                </svg>
              )}
              {link.platform === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
                </svg>
              )}
            </a>
            );
          })}
        </div>
        <p>Copyright 2025, {displayName}</p>
      </div>
    </footer>
    
    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
